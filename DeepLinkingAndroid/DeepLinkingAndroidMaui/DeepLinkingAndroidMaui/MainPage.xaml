<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="DeepLinkingAndroidMaui.MainPage">

    <VerticalStackLayout
        Padding="20"
        Spacing="10">
        
        <Label
            Text=".NET MAUI"
            FontSize="28"
            FontAttributes="Bold" />

        <Label
            Text="This app can be opened using a custom URL scheme."
            FontSize="18"
            Margin="0,0,0,10" />
        
        <Button
            Text="Open Webpage"
            HorizontalOptions="Start"
            Clicked="OnButtonClicked" />
        
        <Label
            Text="The webpage acts as a stand-in for an auth flow that may require 2FA."
            FontSize="18" />
        
        <Label
            Text="We don't want this closing when pausing the app."
            FontSize="18"
            Margin="0,0,0,10" />
        
        <Label
            Text="The app icon for this app is purple."
            FontSize="15" />
        
    </VerticalStackLayout>

</ContentPage>